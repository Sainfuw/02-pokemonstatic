---
import PokemonCard from "../components/pokemons/PokemonCard.basic.astro";
import MainLayout from "../layouts/MainLayout.astro";

const title = "Pokemon Static | Home";
const resp = await fetch("https://pokeapi.co/api/v2/pokemon");
const data = await resp.json();
---

<MainLayout title={title}>
  <h1 class="text-3xl py-4">Listado de Pokemons</h1>
  <section class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    {
      data.results.map(({ name, url }: any) => (
        <PokemonCard url={url} name={name} />
      ))
    }
  </section>
</MainLayout>
