---
import PokemonCard from '@/components/pokemons/PokemonCard.astro'
import Title from '@/components/pokemons/shared/Title.astro'
import MainLayout from '@/layouts/MainLayout.astro'

const title = 'Pokemon Static | Home'
const resp = await fetch('https://pokeapi.co/api/v2/pokemon')
const data = await resp.json()
---

<MainLayout title={title}>
  <Title>Listado de Pokemones</Title>
  <section class="grid grid-cols-2 gap-4 md:grid-cols-3 lg:grid-cols-4">
    {
      data.results.map(({ name, url }: any) => (
        <PokemonCard url={url} name={name} />
      ))
    }
  </section>
</MainLayout>
